<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spiritualommunication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeBlue">

        <activity
            android:name=".AddReadNote"
            android:label="Заметки"
            android:parentActivityName=".TextCommunication">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TextCommunication">
            </meta-data>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="Настройки"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity">
            </meta-data>
        </activity>

        <activity
            android:name=".AboutActivity"
            android:label="О приложении"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity">
            </meta-data>
        </activity>

        <activity
            android:name=".TextCommunication"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity">
            </meta-data>
        </activity>

        <activity
            android:name=".MainActivity"
            android:parentActivityName=".ProfilesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProfilesActivity">
            </meta-data>
        </activity>

        <activity
            android:name=".ProfilesActivity"
            android:launchMode="singleTop">

        </activity>

        <activity
            android:name=".MainIntroActivity"
            android:theme="@style/Theme.Intro">
        </activity>

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>