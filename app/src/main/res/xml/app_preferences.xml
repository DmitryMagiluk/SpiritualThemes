<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:entries="@array/title_name"
        android:entryValues="@array/values_int"
        android:icon="@drawable/ic_baseline_format_size_24"
        android:key="text_size"
        android:title="Размер текста"
        app:defaultValue="20"
        app:negativeButtonText="Назад"/>

    <Preference
        android:key="progress_reset"
        android:title="Пройти все темы заново"
        android:icon="@drawable/ic_baseline_refresh_24"/>

    <ListPreference
        android:entries="@array/color_name"
        android:entryValues="@array/color_theme"
        android:key="app_color_theme"
        app:title="Установить цвет приложения"
        android:icon="@drawable/ic_baseline_color_lens_24"
        android:defaultValue="1"
        android:negativeButtonText="Назад"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="switch_preference_night_mode"
        android:title="Ночной режим (в разработке)"
        android:icon="@drawable/ic_baseline_nights_stay_24"/>


</PreferenceScreen>